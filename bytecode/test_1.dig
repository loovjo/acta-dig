@= 'c_prefs'

dw @= 'start'
dw @= 'start_end'
dw @= 'hello'
dw @= 'hello_end'

@label 'start'

    ; Assign handlers
    set_integer r0 0
    integer_to_atom r0
    add_handler
        r0 ; atom
        1  ; program
        0  ; preset count

    set_self_addr r1
    set_float r2 0.0
    send_message
        r1 ; addr
        r2 ; delay
        r0 ; atom
        0  ; argument count


@label 'start_end'

@label 'hello'

    set_integer r0 0
    integer_to_atom r0
    set_self_addr r1
    set_float r2 0.0
    send_message
        r1 ; addr
        r2 ; delay
        r0 ; atom
        0  ; argument count

@label 'hello_end'
